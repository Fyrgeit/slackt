{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "sourceMap": true,
        "rootDir": "./src",
        "allowJs": true,
        "checkJs": false,
        "resolveJsonModule": true,
        "noEmitOnError": true,
        "lib": ["DOM", "ES2020"],
        "typeRoots": ["./node_modules/@types"],
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
